<div class="form-group
	{{#if hidden}} hidden{{/if}}
	{{#if disabled}} disabled{{/if}}"

	 data-available-to="{{get_camper_types this}}"
	{{#if validation}}
	 data-validation="{{print_validation_rules validation}}"
	{{/if}}
	>

	{{#if text}}
		<label class="control-label{{#if validation.required}} required{{/if}}">{{text}}</label>
	{{/if}}

	<div class="validation_message hide">{{{get_validation_messages validation}}}</div>

	{{{print_field this}}}

	{{#if info}}
		<span class="help-block">{{{info}}}</span>
	{{/if}}
</div>